<Window x:Class="RH_STAFF.PlayerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar Player" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Informações do Player" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   Foreground="#2C3E50"/>

        <!-- Formulário -->
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Nickname:" 
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" 
                         x:Name="txtNickname" 
                         Margin="5,0,0,0" 
                         Padding="5"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Nome Real:" 
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" 
                         x:Name="txtRealName" 
                         Margin="5,0,0,0" 
                         Padding="5"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Idade:" 
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" 
                         x:Name="txtAge" 
                         Margin="5,0,0,0" 
                         Padding="5"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="País:" 
                           VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" 
                          x:Name="cmbCountry" 
                          Margin="5,0,0,0" 
                          Padding="5"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Brasil"/>
                    <ComboBoxItem Content="Portugal"/>
                    <ComboBoxItem Content="EUA"/>
                    <ComboBoxItem Content="Espanha"/>
                    <ComboBoxItem Content="Argentina"/>
                    <ComboBoxItem Content="Outro"/>
                </ComboBox>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Status:" 
                           VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" 
                          x:Name="cmbStatus" 
                          Margin="5,0,0,0" 
                          Padding="5"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Ativo"/>
                    <ComboBoxItem Content="Inativo"/>
                    <ComboBoxItem Content="Banido"/>
                    <ComboBoxItem Content="Suspenso"/>
                </ComboBox>
            </Grid>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="btnCancel" 
                    Content="Cancelar" 
                    Width="80" 
                    Margin="0,0,10,0"
                    Click="BtnCancel_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    Padding="8,4"/>
            <Button x:Name="btnSave" 
                    Content="Salvar" 
                    Width="80" 
                    Background="#27AE60" 
                    Foreground="White"
                    Click="BtnSave_Click"
                    Padding="8,4"/>
        </StackPanel>
    </Grid>
</Window>