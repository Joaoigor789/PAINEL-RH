<Page x:Class="RH_STAFF.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard"
      Background="White">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" Margin="0,0,0,20">
                <Border Width="200" Height="120" Background="#3498DB" CornerRadius="8" Margin="0,0,20,20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Total Players" Foreground="White" FontSize="14"/>
                        <TextBlock x:Name="txtTotalPlayers" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Width="200" Height="120" Background="#2ECC71" CornerRadius="8" Margin="0,0,20,20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Players Ativos" Foreground="White" FontSize="14"/>
                        <TextBlock x:Name="txtActivePlayers" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Width="200" Height="120" Background="#E74C3C" CornerRadius="8" Margin="0,0,20,20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Players Banidos" Foreground="White" FontSize="14"/>
                        <TextBlock x:Name="txtBannedPlayers" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Width="200" Height="120" Background="#9B59B6" CornerRadius="8" Margin="0,0,20,20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Staff Online" Foreground="White" FontSize="14"/>
                        <TextBlock x:Name="txtStaffOnline" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Distribuição por Status" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Rectangle Width="20" Height="20" Fill="Green" Margin="0,0,10,0"/>
                                <TextBlock>
                                    <Run Text="Ativo:" FontWeight="Bold"/>
                                    <Run x:Name="txtAtivoCount" Text="0 players"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Rectangle Width="20" Height="20" Fill="Red" Margin="0,0,10,0"/>
                                <TextBlock>
                                    <Run Text="Inativo:" FontWeight="Bold"/>
                                    <Run x:Name="txtInativoCount" Text="0 players"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Rectangle Width="20" Height="20" Fill="Orange" Margin="0,0,10,0"/>
                                <TextBlock>
                                    <Run Text="Banido:" FontWeight="Bold"/>
                                    <Run x:Name="txtBanidoCount" Text="0 players"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Últimos Players Cadastrados" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid x:Name="dgRecentPlayers" AutoGenerateColumns="False" Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}" Width="100"/>
                                <DataGridTextColumn Header="Data" Binding="{Binding RegistrationDate, StringFormat=dd/MM/yyyy}" Width="80"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Ações Rápidas" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <WrapPanel>
                        <Button x:Name="btnAddPlayer" Content="Adicionar Novo Player" Background="#27AE60" Foreground="White" Padding="15,8" Margin="0,0,10,10"/>
                        <Button x:Name="btnGenerateReport" Content="Gerar Relatório" Background="#3498DB" Foreground="White" Padding="15,8" Margin="0,0,10,10"/>
                        <Button x:Name="btnExportData" Content="Exportar Dados" Background="#9B59B6" Foreground="White" Padding="15,8" Margin="0,0,10,10"/>
                        <Button x:Name="btnBackup" Content="Backup Sistema" Background="#E67E22" Foreground="White" Padding="15,8" Margin="0,0,10,10"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Background="#2C3E50" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Informações do Sistema" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <WrapPanel>
                        <StackPanel Margin="0,0,30,0">
                            <TextBlock Text="Versão do Sistema" Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock Text="1.0.0" Foreground="White" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,30,0">
                            <TextBlock Text="Último Backup" Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock x:Name="txtLastBackup" Text="--/--/---- --:--" Foreground="White" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,30,0">
                            <TextBlock Text="Players Hoje" Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock x:Name="txtPlayersToday" Text="0" Foreground="White" FontSize="14"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Status Sistema" Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock x:Name="txtSystemStatus" Text="🟢 Operacional" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>