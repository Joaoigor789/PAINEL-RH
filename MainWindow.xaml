<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RH_STAFF.MainWindow"
        Title="Launcher de Suporte - Staff System" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White">


    <!-- ADICIONE ESTA SEÇÃO DE RECURSOS -->
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#34495E">
            <Grid>
                <Border x:Name="loginPanel" Background="#34495E" Visibility="Visible">
                    <StackPanel Margin="20" VerticalAlignment="Center">
                        <Border Height="80" Background="#2C3E50" Margin="0,0,0,30">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="STAFF SUPPORT" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="Faça Login" Foreground="#BDC3C7" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Usuário:" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtUsername" Background="White" Foreground="#2C3E50" Padding="8" Margin="0,0,0,15" FontSize="14"/>

                        <TextBlock Text="Senha:" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtPassword" Background="White" Foreground="#2C3E50" Padding="8" Margin="0,0,0,25" FontSize="14"/>

                        <Button x:Name="btnLogin" Content="Entrar" Background="#27AE60" Foreground="White" FontSize="14" FontWeight="Bold" Padding="15,8" Height="40" BorderThickness="0" Cursor="Hand"/>

                        <TextBlock x:Name="txtLoginError" Foreground="#E74C3C" FontSize="11" Margin="0,10,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <Border x:Name="menuPanel" Background="#34495E" Visibility="Collapsed">
                    <StackPanel>
                        <Border Height="80" Background="#2C3E50">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="STAFF SUPPORT" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="Launcher v1.0" Foreground="#BDC3C7" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Margin="10">
                            <Button x:Name="btnDashboard" Content="Dashboard" Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="btnPlayers" Content="Gerenciar Players" Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="btnStaff" Content="Staff Members" Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="btnTelador" Content="Telador" Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="btnReports" Content="Relatórios" Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="btnSettings" Content="Configurações" Style="{StaticResource MenuButtonStyle}"/>
                        </StackPanel>

                        <Border Margin="10" Padding="10" Background="#2C3E50">
                            <StackPanel>
                                <TextBlock Text="Usuário Logado:" Foreground="#BDC3C7" FontSize="11"/>
                                <TextBlock x:Name="txtCurrentUser" Text="Admin" Foreground="White" FontWeight="Bold"/>
                                <TextBlock x:Name="txtUserRole" Text="Administrador" Foreground="#3498DB" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="btnLogout" Content="Sair" Margin="10,20,10,10" Background="#E74C3C" Foreground="White" Padding="10,5" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#ECF0F1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock x:Name="txtPageTitle" Text="Sistema de Staff" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock x:Name="txtLoginStatus" Text="Não logado" Margin="20,5,0,0" Foreground="#E74C3C" VerticalAlignment="Bottom" FontSize="12"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Padding="20">
                <Grid>
                    <Border x:Name="welcomePanel" Background="White">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="👨‍💼 Staff Support Launcher" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>
                            <TextBlock Text="Faça login para acessar o sistema" FontSize="16" Foreground="#7F8C8D" TextAlignment="Center" Margin="0,0,0,30"/>
                            <Border Width="400" Height="200" Background="#ECF0F1" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Recursos do Sistema:" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                                    <StackPanel Margin="10">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="✓" Foreground="#27AE60" Margin="0,0,5,0"/>
                                            <TextBlock Text="Gerenciamento de Players"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="✓" Foreground="#27AE60" Margin="0,0,5,0"/>
                                            <TextBlock Text="Dashboard em tempo real"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="✓" Foreground="#27AE60" Margin="0,0,5,0"/>
                                            <TextBlock Text="Exportação de dados CSV"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✓" Foreground="#27AE60" Margin="0,0,5,0"/>
                                            <TextBlock Text="Sistema de login seguro"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>