<Page x:Class="RH_STAFF.TeladorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Area do Telador"
      Background="White">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <Border Grid.Row="0" Background="#3498DB" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🧵" FontSize="24" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="ÁREA DO TELADOR" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Gestão de Telagem e Anexos" Foreground="#BDC3C7" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Conteúdo Principal -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Formulário de Telagem -->
                <Border Grid.Column="0" Background="#ECF0F1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Registro de Telagem" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Cliente:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="txtCliente" Margin="5,0,0,0" Padding="5"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Tipo de Tecido:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" x:Name="cmbTecido" Margin="5,0,0,0" Padding="5">
                                <ComboBoxItem Content="Algodão"/>
                                <ComboBoxItem Content="Poliéster"/>
                                <ComboBoxItem Content="Seda"/>
                                <ComboBoxItem Content="Linho"/>
                                <ComboBoxItem Content="Jeans"/>
                                <ComboBoxItem Content="Malha"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Cor:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="txtCor" Margin="5,0,0,0" Padding="5"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Metragem (m):" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="txtMetragem" Margin="5,0,0,0" Padding="5"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Data Entrega:" VerticalAlignment="Center"/>
                            <DatePicker Grid.Column="1" x:Name="dpDataEntrega" Margin="5,0,0,0"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Observações:" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <TextBox Grid.Column="1" x:Name="txtObservacoes" Margin="5,0,0,0" Padding="5" 
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Status:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" x:Name="cmbStatus" Margin="5,0,0,0" Padding="5">
                                <ComboBoxItem Content="Pendente"/>
                                <ComboBoxItem Content="Em Produção"/>
                                <ComboBoxItem Content="Concluído"/>
                                <ComboBoxItem Content="Entregue"/>
                            </ComboBox>
                        </Grid>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnSalvarTelagem" Content="Salvar Registro" 
                                    Background="#27AE60" Foreground="White" Padding="15,8" Margin="0,0,10,0"/>
                            <Button x:Name="btnLimparForm" Content="Limpar" 
                                    Background="#95A5A6" Foreground="White" Padding="15,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Anexos e Lista -->
                <StackPanel Grid.Column="1">
                    <!-- Upload de Anexos -->
                    <Border Background="#ECF0F1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="📎 Anexar Arquivos" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Button x:Name="btnSelecionarArquivo" Content="Selecionar Arquivo" 
                                    Background="#3498DB" Foreground="White" Padding="10,5" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtArquivoSelecionado" Text="Nenhum arquivo selecionado" 
                                       FontSize="11" Foreground="#7F8C8D" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtDescricaoArquivo" Padding="5" Margin="0,10,0,10" 
                                     Text="Descrição do arquivo..."/>
                            <Button x:Name="btnUploadArquivo" Content="Upload" 
                                    Background="#9B59B6" Foreground="White" Padding="10,5"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista de Telagens Recentes -->
                    <Border Background="#ECF0F1" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="📋 Telagens Recentes" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <DataGrid x:Name="dgTelagens" AutoGenerateColumns="False" Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="80"/>
                                    <DataGridTextColumn Header="Tecido" Binding="{Binding Tecido}" Width="70"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Estatísticas -->
            <Border Grid.Row="2" Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal">
                    <Border Width="120" Height="80" Background="#3498DB" CornerRadius="4" Margin="0,0,10,0">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Total" Foreground="White" FontSize="11"/>
                            <TextBlock x:Name="txtTotalTelagens" Text="0" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Width="120" Height="80" Background="#2ECC71" CornerRadius="4" Margin="0,0,10,0">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Concluídos" Foreground="White" FontSize="11"/>
                            <TextBlock x:Name="txtConcluidos" Text="0" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Width="120" Height="80" Background="#E67E22" CornerRadius="4" Margin="0,0,10,0">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Pendentes" Foreground="White" FontSize="11"/>
                            <TextBlock x:Name="txtPendentes" Text="0" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Width="120" Height="80" Background="#9B59B6" CornerRadius="4">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Anexos" Foreground="White" FontSize="11"/>
                            <TextBlock x:Name="txtTotalAnexos" Text="0" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>